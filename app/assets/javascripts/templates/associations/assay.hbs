<li class="association-list-item">
    <input type="hidden" name="{{type}}[assay_assets_attributes][][assay_id]" value="{{assay.id}}"/>
    {{assay.title}}
    {{#if direction}}
        <input type="hidden" name="{{type}}[assay_assets_attributes][][direction]" value="{{direction.value}}"/>
    {{/if}}
    {{#if relationship_type}}
        <input type="hidden" name="{{type}}[assay_assets_attributes][][relationship_type_id]" value="{{relationship_type.value}}"/>
        <small>({{relationship_type.text}})</small>
    {{/if}}
    <a class="remove-association clickable" title="Remove assay">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
</li>
