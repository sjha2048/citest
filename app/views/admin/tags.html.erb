<h2><%= "#{@tags.size} tags" -%></h2>

<div class="row">
  <div class="col-lg-8 col-md-10">
    <div class="table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th>ID</th>
          <th>Tag</th>
          <th>Associated items</th>
          <th>Contexts</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: 'tag', collection: @tags %>
        </tbody>
      </table>
    </div>
  </div>
</div>
