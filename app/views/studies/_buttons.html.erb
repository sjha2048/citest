<%= render :partial => "subscriptions/subscribe", :locals => {:object => item} %>

<% if logged_in_and_member? %>
    <%= button_link_to("New #{t('study')} based on this one", 'new', new_object_based_on_existing_one_study_path(item,:controller_name=>"studies")) %>
<% end %>

<% if item.can_edit? -%>
  <%= button_link_to("Add an #{t('assays.assay')}", 'new', new_assay_path(:study_id=>item,:create_from_asset=>item.create_from_asset)) -%>
<% end -%>

<%= admin_dropdown do %>
    <% if item.can_manage? -%>
        <li><%= image_tag_for_key('manage', edit_study_path, nil, nil, "Manage #{t('study')}") -%></li>
        <%= render :partial => 'snapshots/new_snapshot_link', :locals => { :item => item } %>
    <% elsif item.can_edit?-%>
        <li><%= image_tag_for_key('edit', edit_study_path, "Edit #{t('study')}", nil, "Edit #{t('study')}") -%></li>
    <% end -%>

    <%= delete_icon item,current_user -%>
<% end -%>
