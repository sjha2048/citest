<% person_value=(@study && @study.person_responsible) ? @study.person_responsible.id : 0 %>
<% person_value=current_user.person.id if (person_value==0 && people.include?(current_user.person)) %>
<% people_options = [["Nobody",0]]|people.collect{|p| [h(p.name),p.id]} %>

<%= select_tag :study_person_responsible_id,
  options_for_select(people_options,person_value),
  {
    :disabled=>(people.nil? || people.empty?),
    :name=>"study[person_responsible_id]",
    :class => 'form-control'
  }
-%>
