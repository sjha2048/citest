<h1>Edit profile: <%= link_to(h(@person.name), person_path(@person)) -%></h1>

<%= form_for @person do |f| %>
    <% if @edit_roles.nil? || !@edit_roles %>
      <%= render :partial => "edit_form", :locals => { :f => f, :person => @person } -%>
    <% else %>
      <%= render :partial => "edit_roles_form", :locals => { :f => f, :person => @person } -%>
    <% end %>
<% end -%>
