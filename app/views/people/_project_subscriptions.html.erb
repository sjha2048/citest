<%= folding_panel("Subscriptions", true) do %>
    <% project_subscriptions = person.project_subscriptions.uniq %>
    <% if project_subscriptions.empty? %>
        <span class='none_text'>None</span>
    <% else %>
       <span> Here is the list of <%= t('project').pluralize %> you are subscribed to: </span>
        <table>
          <tr>
            <th> <%= t('project') %></th>
            <th>Email Frequency</th>
          </tr>
          <% project_subscriptions.sort{|ps1,ps2|ps1.project.title <=> ps2.project.title}.each do |project_subscription| %>
              <tr>
                <td class="text-left"> <%= link_to project_subscription.project.title, project_subscription.project %> </td>
                <td> <%= project_subscription.frequency %> </td>
              </tr>
          <% end %>
        </table>
    <% end %>
<% end %>
