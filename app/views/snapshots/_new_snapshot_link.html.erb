<% if item.permitted_for_research_object? %>
    <li><%= image_tag_for_key('snapshot', polymorphic_path([item, :snapshot], :action => 'new'), "Make a Snapshot", nil, "Make a Snapshot") -%></li>
<% else %>
    <% explanation = "You may only create snapshots of publicly accessible #{text_for_resource(item).pluralize.downcase}." %>
    <li>
      <span class='disabled_icon disabled' onclick='alert("<%= explanation-%>")' data-tooltip='<%= tooltip(explanation) -%>'>
          <%= image('snapshot', {:alt=>"Snapshot", :class=>"disabled"}) %> Make Snapshot
      </span>
    </li>
<% end %>
