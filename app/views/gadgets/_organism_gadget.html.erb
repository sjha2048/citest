<% if Seek::Config.organisms_enabled %>
    <div id="organism_gadget" class="panel panel-default">
      <div class="panel-heading">
        Organisms
      </div>

      <div class="panel-body">
        <ul>
          <% Organism.all.sort_by(&:title).each do |organism| %>
            <li>
              <%= link_to organism.title, organism %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
